<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.username}} on {{format_date date_created}}</p>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h4>New Comment:</h4>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-title">Title:</label>
        <input class="form-input" type="text" id="comment-title" name="comment-title" />
      </div>
      <div class="form-group">
        <label for="comment-content">Content:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group new-comment-btn">
        <button type="submit" class="btn btn-sm btn-primary">Post Comment</button>
      </div>
    </form>
 </div>

{{>comment}}

<script src="./js/blogComment.js"></script>


