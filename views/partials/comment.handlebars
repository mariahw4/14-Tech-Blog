
    {{#if comments.length}}
  <div class="col-md-6 comment-list">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="container container-fluid mb-2">
      <div class="col-md-8">
        <p>{{comment.comment-content}} </p>
        <p>By {{user.username}} on {{format_date date_created}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
 





